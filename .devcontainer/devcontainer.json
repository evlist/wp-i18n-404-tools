{
	"name": "wp-i18n-404-tools Codespace",
	"dockerComposeFile": [
		"docker-compose.yml"
	],
	"service": "workspace",
	"workspaceFolder": "/workspaces/wp-i18n-404-tools",
	"runServices": [
		"wordpress",
		"db"
	],
	"shutdownAction": "stopCompose",
	// Mount host Docker socket so docker inside the devcontainer talks to the host daemon
	"mounts": [
		"source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
	],
	// Add vscode to docker group & fix workspace ownership (runs once after creation)
	"postCreateCommand": "sudo groupadd -f docker || true && sudo usermod -aG docker vscode || true && sudo chown -R vscode:vscode /workspaces/wp-i18n-404-tools || true",
	// Existing startup actions (keep as-is)
	"postStartCommand": "composer install --no-interaction || true; ./scripts/bootstrap-wp.sh || true",
	"customizations": {
		"vscode": {
			"extensions": [
				"bmewburn.vscode-intelephense-client",
				"junstyle.php-cs-fixer",
				"mikestead.dotenv",
				"EditorConfig.EditorConfig"
			]
		}
	},
	"forwardPorts": [
		8080,
		9003
	],
	// Force docker client to fall back to host daemon API (adjust if host daemon API differs)
	"remoteEnv": {
		"DOCKER_API_VERSION": "1.43"
	},
	"remoteUser": "vscode"
}
