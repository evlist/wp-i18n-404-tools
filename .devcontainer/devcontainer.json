{
	"name": "wp-i18n-404-tools Codespace",
	"dockerComposeFile": [
		"docker-compose.yml"
	],
	"service": "workspace",
	"workspaceFolder": "/workspaces/wp-i18n-404-tools",
	"runServices": [
		"wordpress",
		"db"
	],
	"shutdownAction": "stopCompose",
	"postStartCommand": "composer install --no-interaction || true; ./scripts/bootstrap-wp.sh || true",
	"customizations": {
		"vscode": {
			"extensions": [
				"bmewburn.vscode-intelephense-client",
				"junstyle.php-cs-fixer",
				"mikestead.dotenv",
				"EditorConfig.EditorConfig"
			]
		}
	},
	"forwardPorts": [
		8080,
		9003
	],
	"remoteUser": "vscode"
}
